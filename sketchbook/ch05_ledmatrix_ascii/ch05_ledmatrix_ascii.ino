void setup() {
  m.init();
  m.clear(); // 清除，全部熄滅
  m.setIntensity(LED_INTENSITY); // 設定亮度
}
// 傳入ASCII碼，找出相對應的明滅資料，輸出到LED矩陣
byte buffer[10];
void printChar(char c)
{
  if(c < 0x20)
    return;
  c -= 0x20;
  memcpy_P(buffer, CH + 7*c, 7);
  m.writeSprite(0, 0, buffer);
}
void loop() {// 顯示一串字，一次顯示一個字
  char text[] = "Hello, world!";
  int len = sizeof(text) / sizeof(char);
  for(int i = 0; i < len - 1; i++){
    printChar(text[i]);
    delay(1000);
    m.clear();
  }
}

